<launch>

<rosparam file="$(find zigbot_description)/launch/controller.yaml" command="load"/>
<node args="wheel_left_position_controller wheel_right_position_controller joint_state_controller " name="controller_spawner" ns="zigbot" output="screen" pkg="controller_manager" respawn="false" type="spawner"/>
<node name="robot_state_publisher" output="screen" pkg="robot_state_publisher" respawn="false" type="robot_state_publisher">
  <remap from="/joint_states" to="/zigbot/joint_states"/>
</node>

</launch>